<div class="container">
  <%=link_to "Retour", root_path, class:"btn btn-outline-secondary btn-back-user-profil"%>
  <div class="container">
    <div class="row all-cards justify-content-center">
      <div class="card user-details col-10">
        <div class="header">
          <h1>Mon profil</h1>
        </div>
        <ul>
          <li class="user-li"><%= @user.username %></li>
          <li class="user-li"><%= @user.email %></li>
        </ul>
      </div>
      <div class="all-pokemons row justify-content-around">
        <div class="card col-5 pokemons-user"><br>
          <div class="header">
            <h3>Mes pokémons</h3>
          </div>
          <div class="container">
            <% @user.pokemons.each do |pokemon| %>
            <li class="pokemon-li"><%= link_to pokemon.name, pokemon_path(pokemon), {style: 'color:#fecb03' } %></li>
            <% end %>
          </div>
        </div>
        <div class="col-5 pokemons-rent"><br>
          <h3><strong>Les pokémons réservés</strong></h3>
           <div class= "reservation">
    <% @user.bookings.each do |booking| %>
    <br>
    <h4><%= link_to booking.pokemon.name, pokemon_path(booking),class:"text-decoration-none"%></h4>
    <h4><%= booking.date %><h4>
          <% end %>
    </div>
        </div>
      </div>
    </div>

  </div>
</div>
